---
import Layout from "../layouts/Layout.astro";
import { projects } from "../data/projects";
console.log(projects);
---

<Layout title="Projects">
  <div class="div1">
    <img class="img-project" src="/img/perfil.jpg" />
  </div>
  <div class="div2">
    <div class="projects">
      <div class="projet-title">
        <h2>Projects</h2>
        <h3>9</h3>
      </div>
      <ul>
        {
          projects.map((project) => (
            <li>
              <img class="image-1" src="/img/flecha.png" alt="" />
              <a href="">{project.title}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</Layout>

<style>
  .div1 {
    width: 50%;
    height: 100%;
    display: flex;
    align-items: flex-end;
  }
  .img-project {
    width: 850px;
    height: 650px;
    border-top-right-radius: 50px;
  }
  .div2 {
    width: 50%;
    height: 100%;
    display: flex;
    align-items: flex-end;
  }
  .projects {
    width: 700px;
    height: 650px;
    font-family: Heming;
  }
  .projet-title {
    width: 100%;
    height: 80px;
    display: flex;
    justify-content: space-between;
    border-bottom: 2px solid #505050d4;
    color: #505050d4;
  }
  h2 {
    font-size: 60px;
    font-weight: bold;
  }
  ul {
    max-height: 560px;
    overflow: auto;
  }

  ul::-webkit-scrollbar {
    width: 1px; /* Ancho del scrollbar */
  }

  li {
    width: 100%;
    height: 80px;
    border-bottom: 2px solid black;
    font-size: 40px;
    line-height: 80px;
    color: #505050d4;
  }
