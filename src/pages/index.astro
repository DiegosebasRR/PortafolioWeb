---
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Diego Portafolio">
  <div class="container-index">
    <div class="div1">
      <p class="saludo">Hola</p>
      <p class="nombre">Soy Diego</p>
      <p class="cargo">Backend y frontend developer</p>
      <p class="descripcion">
        Soy un desarrollador web con más de 2 años de experiencia en
        programación. enfocado en crear soluciones innovadoras y eficientes.
        Estoy en constante aprendizaje y actualizando mis habilidades para
        enfrentar nuevos desafíos
      </p>
      <div>
        <button class="boton">Contactame</button>
        <button class="boton">Projectos</button>
      </div>
    </div>
    <div class="div2">
      <div class="borderImagen">
        <img class="imagen" src="/img/perfil.jpg" />
      </div>
    </div>
  </div>
  <Footer slot="footer" />
</Layout>

<style>
  .container-index {
    display: flex;
    width: 100%;
    height: 100%;
  }
  .div1 {
    padding-left: 6%;
    height: 100%;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .div2 {
    height: 100%;
    width: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .borderImagen {
    height: 500px;
    width: 500px;
    border-radius: 250px;
    border: 3px solid rgb(216, 217, 218);
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .imagen {
    height: 400px;
    margin: 0 auto;
    border-radius: 200px;
  }
  .saludo {
    margin-top: -55px;
    font-family: Monitor;
    font-size: 140px;
    color: #505050d4;
    font-weight: 600;
    letter-spacing: -5px;
  }
  .nombre {
    font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
    font-size: 110px;
    color: #505050d4;
    font-weight: 600;
    margin-top: -70px;
    text-transform: uppercase;
  }
  .cargo {
    font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
    font-size: 40px;
    color: #505050d4;
    font-weight: 600;
    margin-top: -15px;
    text-transform: uppercase;
  }
  .descripcion {
    font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
    font-size: 20px;
    color: #505050d4;
    margin-top: 25px;
  }
  .boton {
    width: 200px;
    height: 50px;
    border: 4px solid #5050508b;
    border-radius: 10px;
    font-size: 25px;
    color: #505050d4;
    font-weight: 600;
    margin: 30px 20px 0 0;
    text-transform: uppercase;
    transition: all 0.3s;
  }
  .boton:hover {
    transform: scale(1.1);
  }
  @media (max-width: 1366px) {
    .saludo {
      font-size: 130px;
      margin-bottom: 20px;
    }
    .nombre {
      font-size: 100px;
    }
    .cargo {
      font-size: 30px;
    }
    .descripcion {
      font-size: 16px;
    }
    .boton {
      width: 150px;
      height: 35px;
      font-size: 18px;
    }
    .borderImagen {
      height: 450px;
      width: 450px;
      border-radius: 225px;
    }
    .imagen {
      height: 350px;
      border-radius: 175px;
    }
  }
  @media (max-width: 1180px) {
