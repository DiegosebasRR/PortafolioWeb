---
import Layout from "../layouts/Layout.astro";
import { projects } from "../data/projects";
import Footer from "../components/Footer.astro";
console.log(projects);
---

<Layout title="Projects">
  <div class="projects">
    {
      projects.map((project) => (
        <div class="proyecto">
          <div class="proyecto-img">
            <img src={`${project.src}`} alt="Proyecto 1" />
            <div class="proyecto-overlay">
              <div class="proyecto-content">
                <h1 class="title">{project.title}</h1>
                <p class="description">{project.description[0]}</p>
                <div class="container-t-b">
                  <div class="technologies">
                    {project.technologies.map((technology) => (
                      <img
                        class="technology"
                        src={`/img/${technology}.svg`}
                        alt=""
                      />
                    ))}
                  </div>
                  <button>
                    <a href={`/projects/${project.id}`}>
                      <svg
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="#000000"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M17 7l-10 10" />
                        <path d="M8 7l9 0l0 9" />
                      </svg>
                    </a>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
  <Footer slot="footer" />
</Layout>

<style>
  .projects {
    margin-top: 5%;
    width: 100%;
    max-height: 80%; /* Altura mÃ¡xima para habilitar el desplazamiento vertical */
    overflow: auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    grid-template-rows: auto;
  }

  .proyecto {
    height: auto;
    box-sizing: border-box;
  }

  .proyecto-img {
    position: relative;
    overflow: hidden;
  }

  .proyecto-img > img {
    max-width: 100%;
    height: auto;
    z-index: 3;
    filter: grayscale(100%) saturate(0%) opacity(75%);
    -webkit-filter: grayscale(100%) saturate(0%) opacity(75%);
    -moz-filter: grayscale(100%) saturate(0%) opacity(75%);
  }

  .proyecto-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to top,
      rgba(18, 18, 18, 0.804) 100%,
      rgba(0, 0, 0, 0) 100%
    );
    padding: 20px;
    color: #fff;
    opacity: 0;
    transition: all 0.7s;
  }

  .proyecto:hover .proyecto-overlay {
    opacity: 1;
  }

  .proyecto-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-family: Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
      "Helvetica Neue", sans-serif;
    padding-inline: 20px;
  }
  .title {
    font-size: 38px;
    font-weight: 600;
    font-family: Heming;
  }
  .description {
    font-size: 18px;
    margin-bottom: 50px;
    font-family: Heming;
  }
  .technologies {
    display: flex;
    gap: 10px;
  }
  .technology {
    height: 30px;
    width: 30px;
  }
  .container-t-b {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  button {
    height: 40px;
    width: 40px;
    background-color: rgba(240, 240, 240, 0.667);
    border-radius: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s;
  }
  button:hover {
    transform: scale(1.1);
  }

  @media (max-width: 450px) {
    .title {
      font-size: 28px;
    }
    .description {
      font-size: 14px;
      margin-bottom: 30px;
    }
  }
</style>
